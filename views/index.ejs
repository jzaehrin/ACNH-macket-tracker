<body>
<div>
    <h1>index</h1>
    <form method="POST" action="/add">
        <label for="id">Your id</label>
        <input name="id" type="text" value="<%= uuid %>" />

        <label for="date">Date</label>
        <input name="date" type="date" value="<%= new Date(Date.now()).toISOString().substr(0, 10)%>"/>

        <label for="moment">Morning</label>
        <input name="moment" type="radio" value="0" checked/>
        <label for="moment">Afternoon</label>
        <input name="moment" type="radio" value="1"/>

        <label for="amount">Amount</label>
        <input name="amount" type="number"/>

        <input type="submit" value="Send"/>
    </form>
</div>
</body>
</html>